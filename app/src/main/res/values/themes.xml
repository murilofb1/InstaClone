<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InstaClone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorSecondary">@color/primaryDarkInsta</item>
        <item name="colorAccent">@color/purple_200</item>
    </style>

    <style name="Theme.InstaClone.Authentication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.InstaClone.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="android:colorBackground">@color/middleGray</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="colorAccent">@color/purple_200</item>
    </style>

    <style name="Theme.InstaClone.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.InstaClone.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>